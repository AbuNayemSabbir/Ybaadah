<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".EditNamajActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/editPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/EditPage"
            android:textAlignment="center"
            android:textColor="#336699"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Edit Card 1 -->
        <RelativeLayout 
            android:id="@+id/editCard1" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_below="@id/editPageTitle"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="8dp" 
            android:layout_marginLeft="8dp" 
            android:layout_marginTop="16dp"
            android:background="@drawable/card_background"> 

            <LinearLayout 
                android:id="@+id/ll1" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="8dp" 
                android:layout_marginRight="8dp" 
                android:layout_marginBottom="8dp" 
                android:orientation="horizontal" 
                tools:ignore="ExtraText"> 

                <TextView 
                    android:id="@+id/titleTextView1" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:layout_weight="1" 
                    android:paddingLeft="8dp" 
                    android:paddingTop="8dp" 
                    android:text="@string/fajr" 
                    android:textColor="#336699" 
                    android:textSize="18sp" 
                    android:textStyle="bold" /> 
            </LinearLayout> 

            <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:layout_below="@id/ll1" 
                android:layout_marginLeft="8dp" 
                android:layout_marginRight="8dp" 
                android:layout_marginBottom="8dp" 
                android:orientation="horizontal"> 

                <EditText 
                    android:id="@+id/startTimeEditText1" 
                    android:layout_width="0dp" 
                    android:layout_height="wrap_content" 
                    android:layout_marginRight="8dp" 
                    android:layout_weight="1" 
                    android:background="@drawable/edit_text_background" 
                    android:clickable="true" 
                    android:focusable="false" 
                    android:hint="@string/enter_start_time" 
                    android:inputType="none" 
                    android:paddingLeft="8dp" 
                    android:paddingRight="8dp" 
                    android:paddingBottom="8dp" 
                    android:textColor="#336699" 
                    android:textColorHint="#336699" /> 

                <EditText 
                    android:id="@+id/finishTimeEditText1" 
                    android:layout_width="0dp" 
                    android:layout_height="wrap_content" 
                    android:layout_weight="1" 
                    android:background="@drawable/edit_text_background" 
                    android:clickable="true" 
                    android:focusable="false" 
                    android:hint="@string/enter_finish_time" 
                    android:inputType="none" 
                    android:paddingLeft="8dp" 
                    android:paddingRight="8dp" 
                    android:paddingBottom="8dp" 
                    android:textColor="#336699" 
                    android:textColorHint="#336699" /> 
            </LinearLayout> 
        </RelativeLayout>
        <!-- Edit Card 2 -->
        <RelativeLayout
            android:id="@+id/editCard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editCard1"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/dhuhr"
                    android:textColor="#336699"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/startTimeEditText2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/enter_start_time"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#336699"
                    android:textColorHint="#336699" />

                <EditText
                    android:id="@+id/finishTimeEditText2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/enter_finish_time"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#336699"
                    android:textColorHint="#336699" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Edit Card 3 -->
        <RelativeLayout
            android:id="@+id/editCard3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editCard2"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleTextView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/asr"
                    android:textColor="#336699"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll3"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/startTimeEditText3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/enter_start_time"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#336699"
                    android:textColorHint="#336699" />

                <EditText
                    android:id="@+id/finishTimeEditText3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/enter_finish_time"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#336699"
                    android:textColorHint="#336699" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Edit Card 4 -->
        <RelativeLayout
            android:id="@+id/editCard4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editCard3"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleTextView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/maghrib"
                    android:textColor="#336699"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll4"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/startTimeEditText4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/enter_start_time"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#336699"
                    android:textColorHint="#336699" />

                <EditText
                    android:id="@+id/finishTimeEditText4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/enter_finish_time"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#336699"
                    android:textColorHint="#336699" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Edit Card 5 -->
        <RelativeLayout
            android:id="@+id/editCard5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editCard4"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleTextView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/isha"
                    android:textColor="#336699"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll5"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/startTimeEditText5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/enter_start_time"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#336699"
                    android:textColorHint="#336699" />

                <EditText
                    android:id="@+id/finishTimeEditText5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/enter_finish_time"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#336699"
                    android:textColorHint="#336699" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Edit Card 6 -->
        <RelativeLayout
            android:id="@+id/editCard6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editCard5"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/card_background">

            <LinearLayout
                android:id="@+id/ll6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleTextView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/jummah"
                    android:textColor="#336699"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll6"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/startTimeEditText6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/enter_start_time"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#336699"
                    android:textColorHint="#336699" />

                <EditText
                    android:id="@+id/finishTimeEditText6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/enter_finish_time"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#336699"
                    android:textColorHint="#336699" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Save Button with CardView wrapper -->
        <androidx.cardview.widget.CardView
            android:id="@+id/saveButtonCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editCard6"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#00BCD4">  <!-- Cyan color -->

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:padding="12dp"
                android:text="@string/EditTimeSaveButtonName"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</ScrollView>
